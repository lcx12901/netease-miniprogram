/* pages/recommend/recommend.wxss */
/* 头部框 */
.title {
  position: relative;
  min-height: 120px;
  display: flex;
  padding: 0 20px 20px;
  background: linear-gradient(to bottom, #d43c33, #FF0000);
}
.back-radius {
  position: absolute;
  background: linear-gradient(to bottom, rgba(255, 255, 255, 0.103), rgba(255, 255, 255, 0.027));
  box-shadow: 0 2px 18px 0 rgba(255, 255, 255, 0.103);
  border-radius: 100%;
}
.back-mini {
  top: 10%;
  left: 50%;
  width: 60px;
  height: 60px;
}
.back-middle {
  top: 40%;
  left: 60%;
  width: 90px;
  height: 90px;
}
.back-large {
  top: -20%;
  left: 10%;
  width: 120px;
  height: 120px;
}
/* 显示今天日期 */
.today {
  margin-top: auto;
  color: #fff;
  font-weight: bolder;

}
.today > text:first-child {
  font-size: 25px;
}
.today text:nth-child(2) {
  font-size: 14px;
}
.today > view {
  display: flex;
  align-items: center;
}
.today > view text {
  font-size: 12px;
}
.today > view image {
  filter: invert(100%);
  width: 12px;
  height: 12px;
}
/* 历史日推 */
.history {
  margin-top: auto;
  margin-left: auto;
  color: #fff;
  font-size: 10px;
  padding-left: 20px;
  padding-right: 20px;
  padding-bottom: 10px;
  background-color: #f5f5f554;
  border-radius: 30px;
}
.history icon {
  height: 16px;
}
/* 每日推荐主体内容 */
.content {
  height: 1000px;
}
/* 全部播放  粘性布局 */
.fixed {
  position: fixed;
  top: 0;
}
.play-all {
  display: flex;
  width: 100%;
  align-items: center;
  padding-left: 10px;
  height: 50px;
  font-size: 15px;
  background: #fff;
  z-index: 99;
}
.play-all image {
  width: 25px;
  height: 25px;
  margin-right: 20px;
}
.play-all image:last-child {
  margin-left: auto;
}
.play-all text {
  font-weight: bolder;
}
.gray-back {
  background-color: #F8F8FF;
}
/* 歌单 */
.song {
  display: flex;
  padding: 5px 10px;
}
.song > image {
  width: 40px;
  height: 40px;
  min-width: 40px;
  min-height: 40px;
  border-radius: 5px;
}
.song .song-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 20px;
  width: 60%;
}
.song .song-info > text {
  font-size: 14px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.song .song-info .song-info-tag {
  display: flex;
  margin-top: 3px;
}
.song .song-info .song-info-tag .song-sq {
  font-size: 8px;
  color: #d81e06;
  border: 1px solid #d81e0650;
  padding: 2px;
  border-radius: 5px;
  margin-right: 5px;
}
.song .song-info .song-info-tag .song-resons {
  display: block;
  font-size: 10px;
  white-space: nowrap;
  color: #FFD700;
  background-color: 	#ffff002d;
}
.song .song-info .song-info-tag .song-ar {
  display: block;
  margin-left: 3px;
  font-size: 10px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  opacity: .6;
}
.song .song-icon {
  position: relative;
  width: 40px;
  height: 40px;
}
.song .song-icon image {
  position: absolute;
  width: 20px;
  height: 20px;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}