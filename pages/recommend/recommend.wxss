/* pages/recommend/recommend.wxss */
.title {
  position: relative;
  min-height: 120px;
  display: flex;
  padding: 0 20px 20px;
  background: linear-gradient(to bottom, #d43c33, #FF0000);
}
.back-radius {
  position: absolute;
  background: linear-gradient(to bottom, rgba(255, 255, 255, 0.103), rgba(255, 255, 255, 0.027));
  box-shadow: 0 2px 18px 0 rgba(255, 255, 255, 0.103);
  border-radius: 100%;
}
.back-mini {
  top: 10%;
  left: 50%;
  width: 60px;
  height: 60px;
}
.back-middle {
  top: 40%;
  left: 60%;
  width: 90px;
  height: 90px;
}
.back-large {
  top: -20%;
  left: 10%;
  width: 120px;
  height: 120px;
}
.today {
  margin-top: auto;
  color: #fff;
  font-weight: bolder;

}
.today > text:first-child {
  font-size: 25px;
}
.today text:nth-child(2) {
  font-size: 14px;
}
.today > view {
  display: flex;
  align-items: center;
}
.today > view text {
  font-size: 12px;
}
.today > view image {
  filter: invert(100%);
  width: 12px;
  height: 12px;
}
.history {
  margin-top: auto;
  margin-left: auto;
  color: #fff;
  font-size: 10px;
  padding-left: 20px;
  padding-right: 20px;
  padding-bottom: 10px;
  background-color: #f5f5f554;
  border-radius: 30px;
}
.history icon {
  height: 16px;
}

.content {
  height: 1000px;
}

.fixed {
  position: fixed;
  top: 0;
}
.play-all {
  display: flex;
  align-items: center;
  padding: 20px 10px;
}
.play-all image {
  width: 30px;
  height: 30px;
  margin-right: 20px;
}
.play-all text {
  font-weight: bolder;
}
.gray-back {
  background-color: #F8F8FF;
}