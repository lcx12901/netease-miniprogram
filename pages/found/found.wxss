/* pages/found/found.wxss */
.container {
    padding: 8px;
}
/* banner轮播 */
.swiper-img {
    position: relative;
    width: 100%;
    border-radius: 15px;
}
.swiper-text {
    position: absolute;
    right: 0;
    bottom: 0;
    font-size: 8px;
    line-height: 7px;
    padding: 0 10px 5px;
    border-top-left-radius: 10px;
}
/* 图标入口列表 */
.scroll-view {
    white-space: nowrap;
    min-height: 200rpx;
    overflow-anchor:auto;
}
.scroll-view-box {
    display: flex;
}

.scroll-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin: 30rpx;
}

.scroll-item image {
    position: relative;
    width: 40px;
    height: 40px;
    background: #d81e06;
    border-radius: 100%;
    margin-bottom: 5px;
}
.scroll-item image text {
    position: absolute;
    color: #d81e06;
    font-weight: bold;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}
.scroll-item text {
    font-size: 12px;
    color: rgba(0, 0, 0, .7);
}
/* 推荐栏目容器 */
.recommend {
    margin-bottom: 25px;
}
/* 栏目标题 */
.title,
.title .show-more {
    display: flex;
    align-items: center;
}
.title {
    margin: 5px;

}
.title > text {
    font-weight: bolder;
}
.title .show-more {
    margin-left: auto;
    font-size: 12px;
    padding: 4px 10px;
    border: 1px solid #DCDCDC;
    border-radius: 12px;
    text-align: center;
    box-shadow: 0 2px 10px 0 rgb(0 0 0 / 10%);
}
.title .show-more {
    font-weight: bolder;
}
.title .show-more image {
    width: 10px;
    height: 10px;
    margin-left: 4px;
}
.scroll-resource-item {
    display: flex;
    flex-direction: column;
    margin-top: 10px;
    margin-right: 15px;
}
.scroll-resource-item > image {
    position: relative;
    width: 100px;
    height: 100px;
    margin-bottom: 4px;
    border-radius: 10px;
    box-shadow: 0 2px 8px 0 rgb(0 0 0 / 20%);
}
.scroll-resource-item image view {
    position: absolute;
    width: 50px;
    top: 4px;
    right: 5px;
    padding: 0 5px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #929292a4;
    border-radius: 10px;
}
.scroll-resource-item image view image {
    width: 12px;
    height: 12px;
    margin-right: 2px;
}
.scroll-resource-item image view text {
    font-size: 10px;
    color: #fff;
}
.scroll-resource-item view {
    width: 100px;
    font-size: 12px;
    line-height: 20px;
    white-space: normal;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    align-content: center;
}
/* 排行榜 */
.play-swiper-box {
    height: 300px;
    align-items: center;
}
.play-swiper-item {
    display: flex;
    align-items: center;
    justify-content: center;
}
.play-swiper {
    width: 95%;
    height: 95%;
    padding-left: 3px;
    border-radius: 20px;
    box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
}
.play-title {
    display: flex;
    justify-content: center;
    margin: 10px 0;
}
.play-title image {
    width: 20px;
    height: 20px;
}
.play-song {
    display: flex;
    margin-bottom: 8px;
}
.play-song > view:first-child {
    position: relative;
    min-width: 60px;
    min-height: 60px;
    border-radius: 10px;
    overflow: hidden;
}
.play-song > view:first-child image {
    position: absolute;
}
.play-song > view:first-child image:first-child {
    width: 60px;
    height: 60px;
}
.play-song > view:first-child image:last-child {
    width: 20px;
    height: 20px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}
.play-song > view:last-child {
    display: flex;
    align-items: center;
}
.play-song > view:last-child text {
    font-size: 14px;
}
.play-song > view:last-child text:first-child {
    margin: 0 18px 0 8px;
}
.play-song > view:last-child text:nth-child(2) {
    white-space: normal;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    align-content: center;
    
}
