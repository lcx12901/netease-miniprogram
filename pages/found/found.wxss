/* pages/found/found.wxss */
.container {
    padding: 8px;
}

.swiper-img {
    position: relative;
    width: 100%;
    border-radius: 15px;
}
.swiper-text {
    position: absolute;
    right: 0;
    bottom: 0;
    font-size: 8px;
    line-height: 7px;
    padding: 0 10px 5px;
    border-top-left-radius: 10px;
}

.scroll-view {
    white-space: nowrap;
    height: 200rpx;
    overflow-anchor:auto;
}
.scroll-view-box {
    display: flex;
}

.scroll-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin: 30rpx;
}

.scroll-item image {
    width: 40px;
    background: #d81e06;
    border-radius: 100%;
    margin-bottom: 5px;
}
.scroll-item text {
    font-size: 12px;
    color: rgba(0, 0, 0, .7);
}
